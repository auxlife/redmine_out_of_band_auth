<h2>TOTP Authentication</h2>

<div id="login-form">
  <%= form_tag({ controller: 'totp_auths', action: 'login' }, onsubmit: 'return keepAnchorOnSignIn(this);') do %>

  <label for="password">OTP Code</label>
  <%= text_field_tag 'password', nil, tabindex: '1', required: true %>

  <input type="submit" name="login" value="<%=l(:button_submit)%>" tabindex="2" id="login-submit" />
  <% end %>
</div>
<%= javascript_tag "$('#password').focus();" %>
